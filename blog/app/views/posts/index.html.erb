<h1>Список всех постов</h1>

<table>
  <% @post.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post_path(category) %></td>
        <td><%= link_to 'New category', new_post_path %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
